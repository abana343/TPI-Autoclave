<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="tpi.tpi_autoclave.Index">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="573dp"
        android:layout_height="43dp"
        android:id="@+id/linearLayout"
        android:layout_alignEnd="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TPI - Autoclave"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/gridLayout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="0">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.11"
                android:weightSum="1">

                //texto de robotino
                <TextView
                    android:id="@+id/texttemperatura"
                    android:text="Temp."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp" />

                //entrada de texto robotino.
                <EditText
                    android:id="@+id/Temperatura"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese temperatura"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:gravity="center"
                    android:layout_marginRight="0dp"
                    android:text="70" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.11"
                android:weightSum="1">

                //texto de robotino
                <TextView
                    android:id="@+id/textTiempo"
                    android:text="Tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp" />

                //entrada de texto robotino.
                <EditText
                    android:id="@+id/Tiempo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese tiempo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30px"
                    android:gravity="center"
                    android:text="20" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.11"
                android:weightSum="1">

                //texto de robotino
                <TextView
                    android:id="@+id/textCiclo"
                    android:text="Periodo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp" />

                //entrada de texto robotino.
                <EditText
                    android:id="@+id/Periodo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese periodo"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="60" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                //texto de robotino

                //entrada de texto robotino.

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iniciar"
                    android:id="@+id/button2"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onClickIniciarGraficaSensando" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="294dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="10"
            android:weightSum="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:id="@+id/listView"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.94" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cargar"
                    android:id="@+id/button3"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eliminar"
                    android:id="@+id/button4"
                    android:layout_marginEnd="27dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

    </GridLayout>

</RelativeLayout>
